<section class="main-item-wrapper blue-text text-darken-4">
  <div class="main-item">
    <h2 class="header-text">登録</h2>
    <div class="login-container container">
    <%= render "shared/alert" %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages %>
      <div class="input-field">
        <%= f.text_field :username, class: "validate", autofocus: true, placeholder: "ユーザー名" %>
      </div>

      <div class="input-field">
        <%= f.email_field :email, class: "validate", autocomplete: "email", placeholder: "メールアドレス" %>
      </div>
      
      <div class="input-field">
        <%= f.password_field :password, class: "validate", autocomplete: "new-password", placeholder: "パスワード" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password_confirmation, class: "validate", autocomplete: "new-password", placeholder: "確認用パスワード" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: 'waves-effect waves-light btn-large white-text' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
