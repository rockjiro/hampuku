<section class="main-item-wrapper blue-text text-darken-4">
  <div class="main-item">
    <h2 class="header-text">パスワード再設定</h2>
    <div class="login-container container">
    <%= render "shared/alert" %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages %>
      <div class="input-field">
        <%= f.email_field :email, class: "validate",  autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>

      <div class="actions">
        <%= f.submit "送信", class: 'waves-effect waves-light btn-large white-text' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</section>